{
  "name": "frontend-workflow",
  "version": "0.20.0",
  "description": "Frontend workflow using Webpack 4",
  "author": "Yulian Alexeyev <yulian@dev-q.be> (https://github.com/ioulian)",
  "keywords": [
    "css",
    "js",
    "webpack",
    "typescript",
    "post-css",
    "prettier",
    "nvm",
    "stylelint",
    "eslint",
    "editorconfig",
    "favicons",
    "bulma",
    "es6",
    "drupal",
    "drupal8"
  ],
  "license": "MIT",
  "homepage": "https://github.com/ioulian/frontend-workflow",
  "repository": {
    "type": "git",
    "url": "git@github.com:ioulian/frontend-workflow.git"
  },
  "engines": {
    "node": ">=10.0.0"
  },
  "private": false,
  "sideEffects": [
    "*.css",
    "*.scss"
  ],
  "dependencies": {
    "@fancyapps/fancybox": "3.5.7",
    "bulma": "0.8.0",
    "core-js": "3.4.2",
    "element-closest": "3.0.2",
    "element-matches-polyfill": "1.0.0",
    "intersection-observer": "0.7.0",
    "jquery": "3.4.1",
    "onfire.js": "2.0.1",
    "promise-polyfill": "8.1.3",
    "smoothscroll-polyfill": "0.4.4",
    "swiper": "5.2.1",
    "throttle-debounce": "2.1.0",
    "vanilla-lazyload": "12.4.0",
    "workbox-webpack-plugin": "4.3.1"
  },
  "scripts": {
    "start": "NODE_ENV=devserver npx webpack-dev-server --open --config webpack.dev.js",
    "start:d": "NODE_ENV=devserver webpack-dashboard -- npx webpack-dev-server --open --config webpack.dev.js",
    "watch": "npx webpack --watch --config webpack.dev.js",
    "build": "yarn lint && yarn export",
    "export": "NODE_ENV=production npx webpack --config webpack.prod.js",
    "lint": "yarn lint:js && yarn lint:css",
    "lint:js": "npx tsc --noEmit --project .tsconfig.json && npx eslint 'src/**/*.{js,ts,tsx}'",
    "lint:css": "npx stylelint 'src/**/*.scss'",
    "analyze": "NODE_ENV=production npx webpack --config webpack.prod.js --profile --json > stats.json && npx webpack-bundle-analyzer stats.json --default-sizes gzip"
  },
  "devDependencies": {
    "@csstools/postcss-sass": "4.0.0",
    "@types/swiper": "5.2.0",
    "@types/throttle-debounce": "2.1.0",
    "@typescript-eslint/eslint-plugin": "2.9.0",
    "@typescript-eslint/parser": "2.9.0",
    "autoprefixer": "9.7.2",
    "clean-webpack-plugin": "3.0.0",
    "css-loader": "3.2.0",
    "cssnano": "4.1.10",
    "eslint": "6.7.1",
    "eslint-config-prettier": "6.7.0",
    "eslint-plugin-prettier": "3.1.1",
    "favicons-webpack-plugin": "1.0.2",
    "file-loader": "5.0.2",
    "html-loader": "0.5.5",
    "html-webpack-plugin": "3.2.0",
    "husky": ">=1",
    "imagemin-webpack-plugin": "2.4.2",
    "inline-manifest-webpack-plugin": "4.0.2",
    "lint-staged": ">=8",
    "mini-css-extract-plugin": "0.8.0",
    "node-sass": "4.13.0",
    "postcss-css-variables": "0.14.0",
    "postcss-easing-gradients": "3.0.1",
    "postcss-loader": "3.0.0",
    "postcss-preset-env": "6.7.0",
    "postcss-utilities": "0.8.4",
    "prettier": "1.19.1",
    "prettier-webpack-plugin": "1.2.0",
    "sass-loader": "8.0.0",
    "script-ext-html-webpack-plugin": "2.1.4",
    "script-loader": "0.7.2",
    "style-loader": "1.0.0",
    "stylelint": "12.0.0",
    "stylelint-config-prettier": "6.0.0",
    "stylelint-config-recommended-scss": "4.1.0",
    "stylelint-prettier": "1.1.1",
    "stylelint-scss": "3.13.0",
    "ts-loader": "6.2.1",
    "typescript": "3.7.2",
    "webpack": "4.41.2",
    "webpack-bundle-analyzer": "3.6.0",
    "webpack-cli": "3.3.10",
    "webpack-dashboard": "3.2.0",
    "webpack-dev-server": "3.9.0",
    "webpack-merge": "4.2.2",
    "webpack-plugin-critical": "1.0.0",
    "webpack-stream": "5.2.1"
  },
  "config": {
    "theme": "#00d1b2",
    "background": "#fff",
    "language": "en-US",
    "googleSiteVerification": "vD8KnNo72dzall0Oh4GH0Nz_FY_Sz38bat_f59dXN-M",
    "manifest": {
      "name": "Frontend workflow",
      "shortName": "Frontend",
      "description": "Frontend workflow description",
      "author": "Yulian Alexeyev",
      "authorUrl": "https://github.com/ioulian"
    },
    "html": {
      "title": "Frontend Workflow demo page",
      "description": "Demo website for Frontend Workflow that you can test and see the usage of included components",
      "url": "https://trusting-perlman-3c2ee5.netlify.com",
      "siteName": "Frontend Workflow",
      "siteSummary": "Frontend starter kit",
      "author": "Yulian Alexeyev",
      "twitterSite": null,
      "twitterAuthor": null
    },
    "devServerHTTPS": true,
    "addFilenameHashes": true,
    "outputPath": "dist",
    "serviceWorkerOnLocalHost": false,
    "cms": {
      "active": false,
      "subFolder": "/themes/custom/fw2019/"
    },
    "modules": {
      "favicons": true,
      "criticalCSS": true,
      "serviceWorker": true,
      "asyncJS": true
    }
  },
  "browserslist": [
    ">0.2%",
    "not dead",
    "ie >= 10",
    "not op_mini all"
  ],
  "husky": {
    "hooks": {
      "pre-commit": "tsc --project .tsconfig.json --noEmit && lint-staged"
    }
  },
  "lint-staged": {
    "src/**/*.{js,ts,tsx}": [
      "eslint --fix",
      "git add"
    ],
    "src/**/*..scss": [
      "stylelint --fix",
      "git add"
    ]
  }
}
